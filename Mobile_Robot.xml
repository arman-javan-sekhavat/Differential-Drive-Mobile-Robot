<mujoco model="Mobile Robot">

	<asset>
		<texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
		<material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>

		<mesh name="chassis" file="3D_Model/STL/chassis.stl"/>
		<mesh name="R_wheel" file="3D_Model/STL/R_wheel.stl"/>
		<mesh name="L_wheel" file="3D_Model/STL/L_wheel.stl"/>
	</asset>
	
	<worldbody>
		<geom name="ground" type="plane" size="0 0 0.1" material="grid"/>
		<light directional="false" active="true" pos="0 0 10" dir="0 0 -1"/>

			<body name="main" pos="0 0 0.03873">
				<freejoint/>
				<geom type="mesh" mesh="chassis" pos="0 0 0" rgba="0.773 0.754 0.734 1.00"/>
				<inertial pos="0 0 0" xyaxes="0.00 0.99 -0.13 -1.00 0.00 0.00" mass="1.16851" diaginertia="12300.89e-7 24387.44e-7 30511.55e-7"/>

				<body name="idle_wheel" pos="0 0.07135 -0.02373">
					<geom type="sphere" size ="0.015" density="0.000001" rgba="0.3 0.3 0.5 1" priority="1" condim="1"/>
					<joint type="ball" pos="0.0 0.0 0.0"/>
				</body>

				<body name="R_wheel_body" xyaxes="1 0 0 0 1 0" pos="+0.06357 -0.02115 -0.01373">
					<geom type="mesh" mesh="R_wheel" rgba="0.2 0.2 0.2 1.0" friction="0"/>
					<inertial pos="0 0 0" xyaxes="0.00000 0.70711 0.70711 0.00000 -0.70711 0.70711" mass="0.03840806" diaginertia="72.07022e-7 72.07022e-7 126.35621e-7"/>
					<joint name="rightWheel" type="hinge" pos="0 0 0" axis="-1 0 0" damping="1e-4" frictionloss="1e-2"/>
				</body>

				<body name="L_wheel_body" xyaxes="1 0 0 0 1 0" pos="-0.06357 -0.02115 -0.01373">
					<geom type="mesh" mesh="L_wheel" rgba="0.2 0.2 0.2 1.0" friction="0"/>
					<inertial pos="0 0 0" xyaxes="0.00000 0.70711 -0.70711 0.00000 -0.70711 -0.70711" mass="0.03840806" diaginertia="72.07022e-7 72.07022e-7 126.35621e-7"/>
					<joint name="leftWheel" type="hinge" pos="0 0 0" axis="-1 0 0" damping="1e-4" frictionloss="1e-2"/>
				</body>
				
			</body>
	
	</worldbody>

	<actuator>
		<motor name="rightMotor" joint="rightWheel"/>
		<motor name="leftMotor"  joint="leftWheel"/>
	</actuator>

	<sensor>
		<framepos objtype="xbody" objname="main"/>
		<frameyaxis objtype="xbody" objname="main"/>
		<framelinvel objtype="xbody" objname="main"/>
		<frameangvel objtype="xbody" objname="main"/>
	    <jointpos name="rightWheelAngle" joint="rightWheel"/>
	    <jointpos name="leftWheelAngle" joint="leftWheel"/>
		<jointvel name="rightWheelVel" joint="rightWheel"/>
		<jointvel name="leftWheelVel" joint="leftWheel"/>	
	</sensor>

	<contact>
		<exclude body1="main" body2="R_wheel_body"/>
		<exclude body1="main" body2="L_wheel_body"/>
		<exclude body1="main" body2="idle_wheel"/>
	</contact>

</mujoco>